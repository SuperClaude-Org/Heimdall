{
  "name": "heimdall-cli",
  "version": "0.1.0",
  "description": "Heimdall - A powerful AI-powered CLI based on opencode",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "heimdall": "./bin/heimdall"
  },
  "scripts": {
    "build": "bun run build:heimdall",
    "build:vendor": "cd vendor/opencode && bun install",
    "build:heimdall": "bun build src/cli/index.ts --outdir=dist --target=node",
    "dev": "bun run src/cli/index.ts",
    "rebrand": "node scripts/rebrand.js",
    "rebrand:dry": "node scripts/rebrand.js --dry-run",
    "update:vendor": "bash scripts/update-vendor.sh",
    "test": "bun test",
    "postinstall": "bun run build:vendor"
  },
  "dependencies": {
    "glob": "^10.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/heimdall.git"
  },
  "keywords": [
    "cli",
    "ai",
    "heimdall",
    "developer-tools"
  ],
  "author": "Your Name",
  "license": "MIT"
}
